{
  "name": "@shrub/contracts",
  "version": "1.0.0",
  "description": "The contracts and dev tooling for shrub.finance",
  "main": "index.js",
  "types": "./types",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "yarn hh:compile && hardhat node --show-accounts",
    "typechain": "yarn typechain:ethers && yarn typechain:web3",
    "typechain:ethers": "typechain --target ethers-v5 --out-dir types/ethers-v5 './abi/**/*.json'",
    "typechain:web3": "typechain --target web3-v1 --out-dir types/web3-v1 './abi/**/*.json'",
    "script:maker": "node scripts/order-generator.js",
    "script:taker": "node scripts/taker-order-generator.js",
    "script:deposit": "node scripts/deposit-eth.js",
    "hh:compile": "hardhat compile && yarn typechain",
    "hh:check": "hardhat check",
    "hh:gas": "REPORT_GAS=true hardhat test",
    "hh:coverage": "hardhat coverage",
    "hh:fundAccounts": "hardhat fundAccounts --network localhost",
    "hh:test": "yarn test",
    "hh:console": "hardhat console --network localhost",
    "prepare": "yarn compile",
    "test": "hardhat test"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^3.4.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.0.2",
    "@typechain/web3-v1": "^3.0.0",
    "@types/config": "0.0.38",
    "@types/mocha": "^8.2.2",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.3.1",
    "hardhat": "^2.4.1",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-deploy": "^0.8.6",
    "hardhat-gas-reporter": "^1.0.4",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@types/chai-as-promised": "^7.1.4",
    "chai-as-promised": "^7.1.1"
  }
}
