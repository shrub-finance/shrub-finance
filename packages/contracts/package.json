{
  "name": "@shrub/contracts",
  "version": "1.0.0",
  "description": "The contracts and dev tooling for shrub.finance",
  "main": "index.js",
  "types": "./types",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "yarn hh:compile && hardhat node --hostname 0.0.0.0",
    "typechain": "yarn typechain:ethers && yarn typechain:web3",
    "typechain:ethers": "typechain --target ethers-v5 --out-dir types/ethers-v5 './abi/**/*.json'",
    "typechain:web3": "typechain --target web3-v1 --out-dir types/web3-v1 './abi/**/*.json'",
    "script:maker": "node scripts/order-generator.js",
    "script:taker": "node scripts/taker-order-generator.js",
    "script:deposit": "node scripts/deposit-eth.js",
    "hh:compile": "hardhat compile && yarn typechain",
    "hh:check": "hardhat check",
    "hh:gas": "REPORT_GAS=true hardhat test",
    "hh:coverage": "hardhat coverage",
    "hh:fundAccounts": "hardhat fundAccounts --network localhost",
    "hh:maker": "hardhat maker --network localhost",
    "hh:maker-mumbai": "hardhat maker --network mumbai",
    "hh:faucet": "hardhat faucet --network localhost",
    "hh:test": "yarn test",
    "hh:console": "hardhat console --network localhost",
    "prepare": "yarn compile",
    "test": "hardhat test"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.3",
    "@nomiclabs/hardhat-solhint": "2.0.0",
    "@nomiclabs/hardhat-truffle5": "2.0.3",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@nomiclabs/hardhat-web3": "2.0.0",
    "@openzeppelin/contracts": "4.4.1",
    "@typechain/ethers-v5": "8.0.5",
    "@typechain/hardhat": "3.1.0",
    "@typechain/web3-v1": "4.0.0",
    "@types/config": "0.0.41",
    "@types/mocha": "9.0.0",
    "chai": "4.3.4",
    "ethereum-waffle": "3.3.0",
    "ethers": "5.5.2",
    "hardhat": "2.8.0",
    "hardhat-abi-exporter": "2.6.1",
    "hardhat-deploy": "0.9.24",
    "hardhat-gas-reporter": "1.0.6",
    "solidity-coverage": "0.7.17",
    "ts-generator": "0.1.1",
    "ts-node": "10.4.0",
    "typechain": "6.1.0",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "cross-fetch": "3.1.4"
  }
}
